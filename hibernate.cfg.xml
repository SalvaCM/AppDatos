<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.username">accesoadatos</property>
        <property name="hibernate.connection.password">123456</property>
        <property name="hibernate.connection.url">jdbc:mysql://188.213.5.150/alojamientos?serverTimezone=UTC</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property>

        
        <!-- Mapeo de las clases  -->
        <mapping class="alojamientos.appdatosA.Alojamientos"></mapping>
        <mapping class="alojamientos.appdatosA.Usuarios"></mapping>
        <mapping class="alojamientos.appdatosA.Reservas"></mapping>
        
    </session-factory>
</hibernate-configuration>
